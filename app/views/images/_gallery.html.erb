<%= javascript_include_tag 'jquery.justifiedGallery.min' %>
<%= javascript_include_tag 'jquery.colorbox' %>
<%= stylesheet_link_tag 'justifiedGallery.min' %>
<%= stylesheet_link_tag 'colorbox' %>
<script>
$(function() {
  $("#gallery").justifiedGallery({
    rel: 'gallery',
    margins: 2
  }).on('jg.complete', function() {
    $(this).find('a').colorbox({
      maxWidth: '80%',
      maxHeight: '80%',
      opacity: 0.8,
      transition: 'elastic',
      current: ''
    });
  });
})
</script>
<% @images.each do |image| %>
<%= link_to image_tag(image.file.url(:thumb)), "#{root_path}#{image.file.url}" %>
<% end %>
